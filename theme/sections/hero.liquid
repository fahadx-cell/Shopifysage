<section class="hero-section relative h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  {% if section.settings.background_image %}
    <div class="hero-image absolute inset-0">
      <img src="{{ section.settings.background_image | img_url: '1800x' }}" 
           alt="{{ section.settings.heading }}" 
           class="w-full h-full object-cover">
      <!-- Dark wash gradient for text readability -->
      <div class="hero-overlay absolute inset-0 bg-gradient-to-b from-black/30 via-black/20 to-black/40"></div>
    </div>
  {% endif %}

  <!-- Hero Content -->
  <div class="hero-content relative z-10 text-center text-white max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    {% if section.settings.heading %}
      <h1 class="hero-title font-serif text-5xl md:text-7xl font-bold mb-4">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    
    {% if section.settings.subheading %}
      <p class="hero-tagline text-xl md:text-2xl font-light mb-8 max-w-2xl mx-auto">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
    
    {% if section.settings.description %}
      <p class="hero-description text-lg md:text-xl mb-12 max-w-3xl mx-auto opacity-90">
        {{ section.settings.description }}
      </p>
    {% endif %}
    
    <!-- Call-to-Action Buttons -->
    <div class="hero-actions flex flex-col sm:flex-row gap-4 justify-center items-center">
      {% if section.settings.primary_button_text and section.settings.primary_button_url %}
        <a href="{{ section.settings.primary_button_url }}" 
           class="hero-button primary bg-blue-600 text-white hover:bg-blue-700 px-8 py-4 text-lg font-medium rounded-md transition-all duration-300 inline-block">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      
      {% if section.settings.secondary_button_text and section.settings.secondary_button_url %}
        <a href="{{ section.settings.secondary_button_url }}" 
           class="hero-button secondary border-2 border-white text-white hover:bg-white hover:text-gray-900 backdrop-blur-sm px-8 py-4 text-lg font-medium rounded-md transition-all duration-300 inline-block">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Scroll indicator -->
  {% if section.settings.show_scroll_indicator %}
  <div class="scroll-indicator absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/70">
    <div class="animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
  {% endif %}
</section>

<style>
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  color: white;
  text-align: center;
}

.hero-image {
  position: absolute;
  inset: 0;
  z-index: -1;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.2), rgba(0,0,0,0.4));
}

.hero-content {
  max-width: 800px;
  padding: 2rem;
  z-index: 1;
}

.hero-title {
  font-family: var(--font-serif);
  font-size: clamp(3rem, 8vw, 6rem);
  font-weight: bold;
  margin-bottom: 1rem;
  line-height: 1.1;
}

.hero-tagline {
  font-size: clamp(1.25rem, 3vw, 2rem);
  font-weight: 300;
  margin-bottom: 2rem;
  opacity: 0.95;
}

.hero-description {
  font-size: clamp(1rem, 2vw, 1.25rem);
  margin-bottom: 3rem;
  opacity: 0.9;
  line-height: 1.6;
}

.hero-button {
  display: inline-block;
  padding: 1rem 2rem;
  font-size: 1.125rem;
  font-weight: 500;
  text-decoration: none;
  border-radius: var(--radius);
  transition: all 0.3s ease;
  transform: translateY(0);
}

.hero-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

.hero-button.primary {
  background: hsl(var(--primary));
  color: hsl(var(--primary-foreground));
}

.hero-button.primary:hover {
  background: hsl(var(--primary) / 0.9);
}

.hero-button.secondary:hover {
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10px);
}

.scroll-indicator {
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(-50%, 0, 0);
  }
  40%, 43% {
    transform: translate3d(-50%, -10px, 0);
  }
  70% {
    transform: translate3d(-50%, -5px, 0);
  }
  90% {
    transform: translate3d(-50%, -2px, 0);
  }
}

/* No background image fallback */
.hero-section:not(:has(.hero-image)) {
  background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--primary) / 0.8) 100%);
  color: hsl(var(--primary-foreground));
}

@media (max-width: 640px) {
  .hero-actions {
    flex-direction: column;
    gap: 1rem;
  }
  
  .hero-button {
    width: 100%;
    max-width: 280px;
  }
}
</style>

