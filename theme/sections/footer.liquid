<footer class="site-footer bg-gray-50 border-t border-gray-200">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Newsletter Section -->
    {% if section.settings.enable_newsletter %}
    <div class="newsletter-section mb-12 text-center">
      <h3 class="font-serif text-2xl font-semibold text-gray-900 mb-4">
        {{ section.settings.newsletter_title | default: "Stay in the Loop" }}
      </h3>
      <p class="text-gray-600 mb-6 max-w-md mx-auto">
        {{ section.settings.newsletter_text | default: "Be the first to know about new collections, exclusive offers, and styling tips." }}
      </p>
      <form action="{{ routes.root_url }}contact#footer-newsletter" method="post" class="newsletter-form flex max-w-md mx-auto gap-2">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="✓">
        <input type="email" name="contact[email]" placeholder="Enter your email" required
               class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        <button type="submit" class="px-6 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors">
          Subscribe
        </button>
      </form>
    </div>

    <div class="border-t border-gray-200 mb-12"></div>
    {% endif %}

    <!-- Main Footer Content -->
    <div class="footer-content grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      
      <!-- Brand -->
      <div class="footer-brand space-y-4">
        <h3 class="font-serif text-xl font-bold text-gray-900">
          {{ section.settings.brand_name | default: "Lama'a" }}
        </h3>
        <p class="text-gray-600 text-sm">
          {{ section.settings.description | default: "Elegance, Plated in Gold. Discover jewelry that celebrates your unique sparkle and confident style." }}
        </p>
        
        <!-- Social Links -->
        <div class="social-links flex space-x-4">
          {% if section.settings.social_instagram %}
            <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-900 transition-colors">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987c6.62 0 11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM12.017 21.986c-5.518 0-9.999-4.48-9.999-9.999c0-5.518 4.481-9.999 9.999-9.999c5.518 0 9.999 4.481 9.999 9.999c0 5.519-4.481 9.999-9.999 9.999z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_facebook %}
            <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-900 transition-colors">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_twitter %}
            <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-900 transition-colors">
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer-links space-y-4">
        <h4 class="font-medium text-gray-900">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="{{ routes.root_url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Home</a></li>
          <li><a href="{{ routes.collections_url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Collections</a></li>
          {% if pages.about %}<li><a href="{{ pages.about.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">About Us</a></li>{% endif %}
          {% if pages.contact %}<li><a href="{{ pages.contact.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Contact</a></li>{% endif %}
          {% for link in linklists.footer.links %}
            <li><a href="{{ link.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Customer Care -->
      <div class="footer-care space-y-4">
        <h4 class="font-medium text-gray-900">Customer Care</h4>
        <ul class="space-y-2">
          {% if pages.shipping %}<li><a href="{{ pages.shipping.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Shipping & Returns</a></li>{% endif %}
          {% if pages.size-guide %}<li><a href="{{ pages.size-guide.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Size Guide</a></li>{% endif %}
          {% if pages.care %}<li><a href="{{ pages.care.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Care Instructions</a></li>{% endif %}
          {% if pages.faq %}<li><a href="{{ pages.faq.url }}" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">FAQ</a></li>{% endif %}
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="footer-contact space-y-4">
        <h4 class="font-medium text-gray-900">Get in Touch</h4>
        <div class="contact-info space-y-3 text-sm text-gray-600">
          {% if section.settings.contact_email %}
          <div class="flex items-center space-x-3">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>{{ section.settings.contact_email }}</span>
          </div>
          {% endif %}
          {% if section.settings.contact_phone %}
          <div class="flex items-center space-x-3">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>{{ section.settings.contact_phone }}</span>
          </div>
          {% endif %}
          {% if section.settings.contact_address %}
          <div class="flex items-center space-x-3">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{{ section.settings.contact_address }}</span>
          </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 mb-8"></div>

    <!-- Bottom Footer -->
    <div class="footer-bottom flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-sm text-gray-600">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
      <div class="footer-legal flex space-x-6 text-sm text-gray-600">
        {% if pages.privacy-policy %}
          <a href="{{ pages.privacy-policy.url }}" class="hover:text-gray-900 transition-colors">Privacy Policy</a>
        {% endif %}
        {% if pages.terms-of-service %}
          <a href="{{ pages.terms-of-service.url }}" class="hover:text-gray-900 transition-colors">Terms of Service</a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
.site-footer {
  background: hsl(var(--card));
  border-top: 1px solid hsl(var(--border));
}

.newsletter-form input:focus {
  outline: none;
  ring: 2px;
  ring-color: hsl(var(--primary));
}

.footer-brand h3 {
  font-family: var(--font-serif);
  color: hsl(var(--foreground));
}

.social-links a:hover svg {
  transform: translateY(-2px);
  transition: transform 0.2s ease;
}

.footer-links a, .footer-care a, .footer-legal a {
  transition: color 0.2s ease;
}

.footer-links a:hover, .footer-care a:hover, .footer-legal a:hover {
  color: hsl(var(--primary));
}
</style>

