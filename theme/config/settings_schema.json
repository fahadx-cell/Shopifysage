  {
    "name": "Product Settings",
    "settings": [
      {
        "type": "header",
        "content": "Product Display"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": false,
        "info": "Display the product vendor/brand name"
      },
      {
        "type": "checkbox",
        "id": "show_sku",
        "label": "Show product SKU",
        "default": false,
        "info": "Display the product SKU/code"
      },
      {
        "type": "checkbox",
        "id": "show_product_type",
        "label": "Show product type",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_quick_view",
        "label": "Enable quick view",
        "default": true,
        "info": "Allow customers to view product details without leaving the collection page"
      },
      {
        "type": "header",
        "content": "Product Images"
      },
      {
        "type": "select",
        "id": "product_image_aspect_ratio",
        "label": "Product image aspect ratio",
        "options": [
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "portrait",
            "label": "Portrait (3:4)"
          },
          {
            "value": "landscape",
            "label": "Landscape (4:3)"
          }
        ],
        "default": "square"
      },
      {
        "type": "checkbox",
        "id": "enable_image_zoom",
        "label": "Enable image zoom on hover",
        "default": true
      },
      {
        "type": "header",
        "content": "Product Grid"
      },
      {
        "type": "range",
        "id": "products_per_row_desktop",
        "label": "Products per row on desktop",
        "min": 2,
        "max": 6,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "products_per_row_mobile",
        "label": "Products per row on mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      }
    ]
  },
